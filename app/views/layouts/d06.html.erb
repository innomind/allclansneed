<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<title><%= @site.site_title %></title>

		<%# bundle do %>
		  <%= javascript_include_tag :defaults%>
		  <%= stylesheet_link_tag "d06/layout" %>
		  <%= stylesheet_link_tag "d06/style" %>
		  <%= include_tiny_mce_if_needed %>
		  <%= yield :header_tags %>
		<%# end %>
</head>

<body>


<div class="wrapper">
    <div class="logo">
        <div class="logo_text"><%= @site.page_title %></div>
        <div class="logo_subtext"><%= @site.page_text_1 %></div>
    </div>
    <div class="navi">
     <div class="float_left"><img src="images/3.gif"; /></div>
     <div class="float_left">
			<% get_boxes_for("top_nav").each do |b| %>
				<%= create_box(b,["<li class=\"navi_nor\"><div class=\"navi_nor_text\">","</div><div class=\"navi_nor_subtext\">&nbsp;</div></li>"]) %>
			<% end %>
     </div>
     <div class="float_right"><img src="images/4.gif"; /></div>
    </div>
    <div class="content">
        <p class="content_title"><span class="content_title_text"><%= @site.page_text_2 %><span class="content_title_subtext"></span></span></p>
        <div class="padding">
        	<%= yield %>
        </div>
    </div>
    <div class="box_left">
		<% get_boxes_for("rightside1").each do |b| %>
			<p class="box_left_cat"><span class="box_left_text"><%= b.name %><span class="box_left_subtext">&nbsp;</span></span></p>
			<div class="padding">
				<%= create_box(b) %>
			</div>
		<% end %>
    </div>
    <div class="box_right">
		<% get_boxes_for("rightside2").each do |b| %>
			<p class="box_right_cat"><span class="box_right_text"><%= b.name %><span class="box_right_subtext">&nbsp;</span></span></p>
			<div class="padding">
				<%= create_box(b) %>
			</div>
		<% end %>
	</div>

</div>

</body>

</html>