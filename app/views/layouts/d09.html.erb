<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<title><%= @site.site_title %></title>

		<%# bundle do %>
		  <%= javascript_include_tag :defaults%>
		  <%= stylesheet_link_tag "d09/layout" %>
		  <%= stylesheet_link_tag "d09/style" %>
		  <%= include_tiny_mce_if_needed %>
		  <%= yield :header_tags %>
		<%# end %>
</head>

<body>


    <div class="wrapper">


        <div class="logo"><span><%= @site.page_title %></span></div>
       <div class="img_1"></div>
       <div class="box_left">
		<div class="padding">
			<% get_boxes_for("leftside").each do |b| %>
				<h3><%= b.name %></h3>
			    	<%= create_box(b) %>
			<% end %>
		</div>
       	<div class="img_2">&nbsp;</div>
       </div>
       <div class="content">
        <div style="padding: 6px;">
			<%= show_breadcrumb %>
			<%= show_notice_and_error %>
			<%= yield %>
		</div>
       </div>
       <div class="box_right">
       <div class="padding">
			<% get_boxes_for("rightside").each do |b| %>
				<h3><%= b.name %></h3>
			    	<%= create_box(b) %>
			<% end %>
		</div>
        <div class="img_3">&nbsp;</div>
       </div>
       <div class="img_6">&nbsp;</div>
        <div class="footer">
        <div style="position: relative; top: -50px;">
         <div class="img_4">&nbsp;</div>
         <div class="img_5">&nbsp;</div>

        </div>
        </div>


    </div>

</body>

</html>