<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<title><%= @site.site_title %></title>

		<%# bundle do %>
		  <%= javascript_include_tag :defaults%>
		  <%= stylesheet_link_tag "d07/layout" %>
		  <%= stylesheet_link_tag "d07/style" %>
		  <%= include_tiny_mce_if_needed %>
		  <%= yield :header_tags %>
		<%# end %>
</head>

<body>

<div class="wrapper">

    <div class="logo">
        <div class="logo_top"><%= @site.page_text_1 %></div>
        <div class="logo_text"><%= @site.page_title %></div>
        <div class="logo_smalltext"><%= @site.page_text_2 %></div>
        <div class="logo_subtext"><%= @site.page_text_3 %></div>
		<div class="breadcrumb"></div>
    </div>
   <div class="box">
         <div class="box_format">
	
		  <% get_boxes_for("leftside").each do |b| %>
		  	<p class="box_cat"><span><%= b.name %></span></p>
		  	<div class="box_content">
		      	<%= create_box(b) %>
		  	</div>
		  	<p class="box_end"></p>
          <br />
		  <% end %>

     </div>
</div>
     <div class="content">
		<%= show_breadcrumb %>
        <%= yield %>

     </div>
     <div class="box2">
		<div class="box2_format">
		  <% get_boxes_for("rightside1").each do |b| %>
		  	<p class="box2_cat"><span><%= b.name %></span></p>
		  	<div class="box2_content">
		      	<%= create_box(b) %>
		  	</div>
		  	<p class="box2_end"></p>
         	<br />
		  <% end %>
       </div>
     
 </div>
     <div class="box3">
          <div class="box3_format">
			  <% get_boxes_for("rightside2").each do |b| %>
			  	<p class="box3_cat"><span><%= b.name %></span></p>
			  	<div class="box3_content">
			      	<%= create_box(b) %>
			  	</div>
			  	<p class="box3_end"></p>
	         	<br />
			  <% end %>
          </div>
     </div>
    <div class="footer"></div>

</div>

</body>

</html>