<% error_handling_form_for @squad, :url => {:action => "confirm_users_save", :id => @squad.id, :clan_id => @clan.id} do |f| %>
	<% @squad.users.each do |u| %>
		<%= u.nick %>
		<%= select("squad_user", u.id, (u.owns_clan?(@squad.clan) ? [] : [["aus dem Clan löschen","delete"]]) + (@clan.squads-[@squad]).collect{|s| ["verschieben nach: "+s.name, s.id]})%><br />
	<% end %>
	<%= f.submit "squad löschen" %>
<% end %>