<h1>Categories</h1>
<ul id="category_list">
<%= render :partial => 'category', :collection => @categories %>
</ul>

<%= sortable_element('category_list',
		 :url => {:action => :update_positions}) %>

<p id="add_link"><%= link_to_function("Add a category",
"Element.remove('add_link');Element.show('add_category')")%></p>
<div id="add_category" style="display:none;">
<% form_remote_tag :url => {:action => 'new'}, :html => {:id => 'category_form'} do%>
Name: <%= text_field "category", "name" %>
	<%= submit_tag 'Add' %>
	<% end %>
</div>