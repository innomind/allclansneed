<h1>New ticket</h1>

<% error_handling_form_for @ticket, :url => tickets_path do |form| %>
      <%= form.text_field :subject %>
      
      <% fields_for "ticket[ticket_message]" do |message_form| %>
        <%= message_form.text_area 'message', :rows => 10, :cols => 40 %>
      <% end %>
      
      <%= form.submit "erstellen" %>
<% end %>

<%= link_to 'Back', tickets_path %>