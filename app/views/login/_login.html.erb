<%unless @logged_in%>
  <br/>

  <% error_handling_form_for :login, :url => { :action => 'login' } do |f|%>
    <%= f.text_field 'nick' %>
    <%= f.password_field 'password' %>
    <%= f.submit 'log in' %>
  <%end%>

  <br/>
  <%= link_to 'account erstellen', :action => 'create' %>

<% else %>
  logged in
<% end %>
