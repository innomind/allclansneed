<%unless @logged_in%>
  <br/>


  <% form_tag :action => 'login' do -%>
    <div>
      <%= label_tag 'nick' %>
      <%= text_field_tag 'nick' %>
    </div>
    <br/>
    <div>
      <%= label_tag 'password' %>
      <%= password_field_tag 'password' %>
    </div>
    <br/>
    <%= submit_tag 'log in' %>
  <%end%>

  <br/>
  <%= link_to 'account erstellen', :action => 'create' %>

<% else %>
  logged in
<% end %>
