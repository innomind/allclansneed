<h1>Clan: <%= @clan.name %></h1>

<div style="float:left">
	<%= image_tag(@clan.clan_pic.url(:thumb))%>
</div>

<div style="float:left">
	<dl class="meta">
		<dt>Name</dt><dd><%= @clan.name %></dd>
		<dt>Clan-ID</dt><dd><%= @clan.uniq %></dd>
		<dt>Gegr√ºndet am</dt><dd><%= l @clan.created_at, :format => "datelong" %> von <%= username(@clan.owner) %></dd>
		<dt>Link</dt><dd><%= link_to "link", root_path(:subdomain => @clan.uniq) %></dd>
	</dl>
</div>

<div style="clear:both"></div>

<h2>Squads</h2>

<% @clan.squads.each do |squad| %>
	<h3><%= squad.name %></h3>
	<ul class="simple-list three_cols">
	   <% squad.squad_users.each do |squad_user|%>
			<li><%= image_tag(squad_user.user.profile.profile_pic.url(:thumb), :width => 30, :height => 30) + username(squad_user.user) %>
			<div>seit <%= time_ago_in_words squad_user.created_at %></div></li>
	   <% end %>
	</ul>
	<div style="clear:both"></div>
<% end %>

<%= show_comments @clan %>