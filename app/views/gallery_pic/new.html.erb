<h1>Bild hochladen</h1>
<% error_handling_form_for :gallery_pic, @gallery_pic, :url => gallery_pics_path(@gallery), :html => { :multipart => true, :method => :post } do |form| %>
  <%= form.file_field :pic %>
  <%= form.text_field :name %>
  <%= form.text_area :description, :rows => "5", :cols => "15" %>
  <%= form.submit "abschicken" %>
<% end %>