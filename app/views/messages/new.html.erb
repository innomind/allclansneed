<h1>Send a new message</h1>

<% error_handling_form_for :message, @message, :url => {:action => "create", :id => params[:id]}, :html => { :multipart => false } do |form| %>
  <%= form.collection_select("receiver_id", @possible_receiver, :id, :login)%>
  <%= form.text_field :subject, :label => "Betreff" %>
  <%= form.text_area :message, :label => "Nachricht" %>
  
  <%= form.submit "abschicken" %>
<% end %>