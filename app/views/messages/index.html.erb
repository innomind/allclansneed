<% if params[:folder].nil? %>
	<h1>Posteingang <small>(<%= link_to "zum Postausgang", messages_path(:folder => "out")%>)</small></h1>
	
<% else %>
	<h1>Postausgang <small>(<%= link_to "zum Posteingang", messages_path %>)</small></h1>
<% end %>

<div class="userlinks">
	<%= link_to image_tag("email_add.png") + " Nachricht versenden", new_message_path %>
</div>

<%= entry_and_pagination @messages %>

<table class="simple-table" style="width:100%">
  <thead>
    <tr> 
      <th></th>
      <th>Betreff</th>
      <th><%= params[:folder].nil? ? "Von" : "An"%></th>
      <th>Datum / Uhrzeit</th>
    </tr>
  </thead>
  <tbody>
<%= render :partial => "message", :collection => @messages %>
</tbody>
</table>