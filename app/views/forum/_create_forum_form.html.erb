<div class ="category_form" id="forum_form_container_<%= params[:id] %>"> 
    <div class="forum_form_title">
        <%= link_to_function image_tag("cross.png") do |page|
            page.remove "forum_form_container_#{params[:id]}"
            page.show "forum_links_#{params[:id]}"
        end %>
    </div>
        <% form_remote_tag :url => {:action => "create", :id => params[:id]}, 
                       :html => {:id => "create_forum_#{params[:id]}"} do  %>

          <p><label for="forum_title">Title</label>
          <%= text_field(:forum, :title) %></p>
          
          <p><label for="forum_subtitle">Subtitle</label>
          <%= text_field(:forum, :subtitle) %></p>
          
            <%= submit_tag "create"%>
    <% end %>

</div>