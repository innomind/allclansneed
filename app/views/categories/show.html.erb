<h1>Kategorien</h1>
<div class="userlinks">
	<%= access_link image_tag("folder_add.png") + " Kategorie erstellen", :controller => :category, :action => :newcat, :path => newcat_category_path(@cat_name, @section_link) %>
</div>

<ul id="categories">
<% @categories.each do |cat| %>
	<li id="<%=dom_id(cat)%>">
		<span class="sortable_handle"><%= image_tag("sort.png") %></span>
		<%= cat.name %>
		<%= intern_pic cat %>
		<%= access_link image_tag("folder_edit.png"), edit_category_path(cat)%>
		<%= access_link image_tag("folder_delete.png"), category_path(cat), :method => :delete, :confirm => "Kategorie wirklcih lÃ¶schen?"%>
	</li>
<% end %>
</ul>


<%= sortable_element("categories", :url => update_positions_categories_path(:id => @cat_name), :handle => "sortable_handle") %>