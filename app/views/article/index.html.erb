<% if @articles.blank? %>
  <p>Bisher noch keine Artikel.</p>
<% else %>
  <p>Alle Artikel dieser Seite:</p>

<ul id="articles">

<% @articles.each do |a| %>
  <li>
    
    <%= link_to a.title, {:action => 'show', :id => a.id} -%>
    von <%= a.user.nick %>
    <%= access_link image_tag("folder_edit.png"), { :action => "edit", :id => a.id } %>
    <%= access_link image_tag("folder_delete.png"), article_path(a.id), :method => "delete", :confirm => "Wirklich löschen?" %>
    
  </li>
<% end %>

</ul>
<% end %>
<p><%= access_link image_tag("folder_add.png") + "Artikel hinzufügen", { :action => 'new' } %></p>