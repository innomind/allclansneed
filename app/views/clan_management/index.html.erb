
Clan: <%= @clan.name  %>

<div>
  <div style="width:49%;float:left">
    <% form_for Squad.new do |f| %>
      <%=f.label :name, 'Name' %>:
      <%=f.text_field :name %><br/>
    
      <%=f.submit 'Squad erstellen'%> 
      <% helper do %>
        erstellt einen squad
      <% end %>
    <%end%>
  </div>
  <!--<div style="width:30%;border-width:1px;border-color:green;border-style:solid;float:right" id="squads">
&nbsp;
  </div>-->
</div>
<br/>
<br/>
<p>
  <% form_tag :action => 'squad_member' do -%>
    <%=hidden_field_tag 'form', '1'%>
        
    <div style="float:left;width:30%;border-style:solid">
      Squad 1: 
    
      <%=render :partial => 'squads_dropdown1'%>
      <%if @squad1.members == [] %>
        <%= submit_tag 'Squad löschen'%>
    
    
      <%else%>            
        <br/> Member: <br/>
        <div style="float:left">
          <%=render :partial => 'members_list1'%>
        </div>
        <div style="float:left">
          <%= submit_tag 'Löschen'%> <%#'[x]', {:name => 'del'} %>
      <% helper do %>
        löscht einen member
      <% end %>
        </div>
        <div style="float:right">
          <div >
            <%= submit_tag 'copy ->' unless @squad2.nil?%>
          </div>
          <div >
            <%= submit_tag 'move ->' unless @squad2.nil?%>
          </div>
        </div>
      <%end%>
    </div>
  <%end%>
  
  <% form_tag :action => 'squad_member' do -%>
    <%=hidden_field_tag 'form', '2'%>
        
    <div style="float:left;width:30%;border-style:solid">
      <% unless @squad2.nil? %>
        Squad 2:
    
        <%=render :partial => 'squads_dropdown2'%>
        <%if @squad2.members == [] %>
          <%= submit_tag 'Squad löschen' %>
    
        <%else%>     
          <br/> members: <br/>
          <div style="float:left">
            <div >
              <%= submit_tag '<- copy' %>
            </div>
            <div >
              <%= submit_tag '<- move' %>
            </div>
          </div>
          <div style="float:right">
            <%=render :partial => 'members_list2'%>
          </div>
          <div style="float:right">
            <%= submit_tag 'Löschen'%>
          </div>
        <%end%>
      <% else %>
        Nur ein Squad verfügbar
      <% end %>
                
    </div>
  <%end%>
</p>
