<% modelname = model.class.name %>

<% if_accessible :controller => "comments" do %>
	<%= link_to_function image_tag("comment_add.png", :border => 0) + " Comment hinzufÃ¼gen", "Element.toggle('add_comment')" %>
	<div id="add_comment" style="display:none;">
		<% form_remote_tag :url => {:controller  => 'comment', :action => 'create', :model => modelname, :id => model.id}, :html => {:id => "create_comment"} do%>
			<%= text_area :comment, "entry", :rows => 2, :cols => 25, :class => "mceEditor" %>
			<%= hidden_field :comment, "intern", :value => (model.attribute_names.include?("intern")? model.intern : false)%>
			<%= submit_tag 'Add' %>
		<% end %>
	</div>
<% end %>

<% comments = get_comments(model) %>
<br>
<%= page_entries_info comments %><br>
<%= will_paginate comments %>
<%# debugger %>
<div id="comments">
    <%= render :partial => "comment/comment", :collection => comments %>
</div>