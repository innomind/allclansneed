<h1>Neuen Kalendereintrag erstellen</h1>
<% error_handling_form_for @event do |form| %>
  
  <%= form.text_field :name %>
  Datum: <%= form.text_field :date, :style => "blank" %> <%= calendar_for('event_date') %><br />
  Uhrzeit: <%= time_picker(Time.now, {:minute_step => 30, :time_separator => ":", :prefix => "event", :field_model => :event, :field_name  => "time" }) %><br />
  Beschreibung: <%= form.text_field :description, :style => "blank" %><br />
  <%= form.check_box :intern %>
  <br />
  <%= form.submit "erstellen" %>
<% end %>